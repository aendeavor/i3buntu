# https://editorconfig.org

# Top-Most EditorConfig File
root = true

# Unix-Style Newlines & Newline Ending Every File
# UTF-8 Charset & Default Indent Style and Length
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.rs]
indent_style = tab
indent_size = 4

[*.sh]
shell_variant      = bash   # like -ln=posix
binary_next_line   = true   # like -bn
switch_case_indent = true   # like -ci
space_redirects    = false  # like -sr
keep_padding       = false  # like -kp
function_next_line = true   # like -fn

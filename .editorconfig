# –––––––––––––––––––––––––––––––––––––––––––––––
# ––– General –––––––––––––––––––––––––––––––––––
# ––– https://editorconfig.org ––––––––––––––––––
# –––––––––––––––––––––––––––––––––––––––––––––––

root = true

[*]
charset = utf-8
indent_size = 2
end_of_line = lf
# indent_style = tab
insert_final_newline = true

# –––––––––––––––––––––––––––––––––––––––––––––––
# ––– Others ––––––––––––––––––––––––––––––––––––
# –––––––––––––––––––––––––––––––––––––––––––––––

[{Makefile,Justfile}]
indent_style = tab
indent_size = 4

# –––––––––––––––––––––––––––––––––––––––––––––––
# ––– Rust ––––––––––––––––––––––––––––––––––––––
# –––––––––––––––––––––––––––––––––––––––––––––––

[*.rs]
indent_style = tab
indent_size = 8

# –––––––––––––––––––––––––––––––––––––––––––––––
# ––– Shell / Bash ––––––––––––––––––––––––––––––
# –––––––––––––––––––––––––––––––––––––––––––––––

[*.{sh,bash}]

indent_style       = space
indent_size        = 2
shell_variant      = bash   # like -ln=posix
binary_next_line   = true   # like -bn
switch_case_indent = true   # like -ci
space_redirects    = false  # like -sr
keep_padding       = false  # like -kp
function_next_line = true   # like -fn

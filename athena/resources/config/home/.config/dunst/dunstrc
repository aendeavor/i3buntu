# Syntax highlighting with (Neo)Vim

# DUNTRC for Dunst 1.5.0 (2020-07-23) and later.
# This version is not yet in Ubuntu 20.04 LTS
# stable upstream, so the RGBA colors would not
# work properly.

# Built from source from release 1.5.0.
# <https://github.com/dunst-project/dunst>

# Configuration documentation found under
# <https://dunst-project.org/documentation/>

[global]
	geometry = "300x0-20+48"
	frame_color = "#EEB55B00"
	corner_radius = 7
	shrink = false
	follow = none
	monitor = 0

	format = "%s\n%b"
	font = Roboto Medium 11
	padding = 30
	line_height = 5
	alignment = center
	word_wrap = true
	ignore_newline = false

	transparency = 0
	separator_color = "#EEB55B00"

	idle_threshold = 0
	show_age_threshold = -1
  
	sticky_history = false
	allow_markup = true
	markup = full
	indicate_hidden = false
	sort = yes
	show_indicators = true
	stack_duplicates = false
	hide_duplicates_count = true
	startup_notification = false

	browser = "/usr/bin/firefox"

[urgency_low]
    background = "#EEB55B00"
    foreground = "#FFFFFF"
    timeout = 5

[urgency_normal]
    background = "#EEB55B00"
    foreground = "#FFFFFF"
    timeout = 7

[urgency_critical]
    background = "#EEB55B00"
    foreground = "#FFFFFF"
    timeout = 9

! ! XRESOURCES - CONFIGURATION FOR X(org)
! ! $HOME/.Xresources
!
! version   0.3.0
! author    aendeavor@Georg Lauterbach

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

! XFT

Xft.dpi:                    96
Xft.antialias:              true
Xft.hinting:                true
Xft.rgba:                   rgb
Xft.autohint:               true
Xft.hintstyle:              hintfull
Xft.lcdfilter:              lcdfilter

! Colors

!! special
*.foreground:   #C8C6C6
*.background:   #1E1F29
*.cursorColor:  #C8C5C5

!! black
*.color0:       #2E2828
*.color8:       #413737

!! red
*.color1:       #C04B57
*.color9:       #CC6672

!! green
*.color2:       #8C9440
*.color10:      #B5DD68

!! yellow
*.color3:       #DE935F
*.color11:      #E9B270

!! blue
*.color4:       #5F819D
*.color12:      #81A2BE

!! magenta
*.color5:       #7F678F
*.color13:      #B294BB

!! cyan
*.color6:       #54665B
*.color14:      #809A83

!! white
*.color7:       #807270
*.color15:      #C8C5C5

! URXVT

URxvt*imLocale:             de_DE.UTF-8

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.loginShell:           true
URxvt.internalBorder:       10
URxvt.lineSpace:            0
URxvt.letterspace:          -1
URxvt.cursorBlink:          0

URxvt*saveLines: 12000

URxvt*scrollBar:            false
URxvt*scrollBar_right:      false
URxvt*scrollstyle:          plain
URxvt.scrollWithBuffer:     true

URxvt*background: rgba:0000/0000/0000/9999
URxvt*foreground: #E5E8E7

URxvt*transparent: true
URxvt*shading: 55
URxvt*blurRadius: 7

URxvt*font: xft:RobotoMono NF:style=Regular:pixelsize=18, \
            xft:Iosevka Nerd Font Mono:style=Regular:pixelsize=18
URxvt*boldFont: xft:RobotoMono NF:style=Bold:pixelsize=18, \
                xft:Iosevka Nerd Font Mono:style=Bold:pixelsize=18

!! Extensions
URxvt.perl-ext-common: default,selection-to-clipboard,resize-font,matcher
URxvt.perl-ext:

!! Disable ISO 14755 unicode input so we can use Ctrl-Shift bindings
URxvt.iso14755:        false
URxvt.iso14755_52:     false

!! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings (optional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

!! Copy & Paste with Control-Shift-c/v
URxvt.clipboard.autocopy: true

!! Matcher (clickable URLs)
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1


    transparency = 10
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    line_height = 7
    separator_height = 0
    padding = 10
    horizontal_padding = 10
    separator_color = #ffffff
    startup_notification = false
    show_indicators = no


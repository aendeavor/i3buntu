general {
	colors = true

	color_good = "#827972"
	color_bad = "#827972"
	color_degraded = "#827972"
    color_separator = "#FDDAC6"

	interval = 5
}

order += "volume master"
order += "battery all"
order += "tztime local"

volume master {
	device = "default"
	mixer = "Master"
	mixer_idx = 0
	# termsyn font
	format = " %volume "
}

tztime local {
    format = "%d.%m.%Y %H:%M"
}

battery all {
    format = "%percentage"
    format_down = ""
}
